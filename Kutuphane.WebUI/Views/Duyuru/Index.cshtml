@using Kutuphane.WebUI.Models.Entity;
@model List<TblDuyuru>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">


    <div class="col-lg-12">


        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Ödünç Kitap Listesi</h5>
            </div>
            <div class="card-body">
                <a href="/Duyuru/Add" class="btn btn-primary">Yeni Duyuru</a>
            </div>
        
            <div class="card-body">
                <table id="scroll-vertical" class="table table-bordered dt-responsive nowrap align-middle mdl-data-table" style="width:100%">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Kategori</th>                           
                            <th>İçerik</th>
                            <th>Sil</th>
                            <th>Güncelle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Count > 0)
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Id</td>
                                    <td>@item.Kategori</td>
                                    

                                    <td><a id="detail" href="/Duyuru/Detail/@item.Id"><span class="badge badge-soft-info">Detay</span></a></td>
                                    <td><a id="delete" href="/Duyuru/Delete/@item.Id"><span class="badge badge-soft-danger">Sil</span></a></td>
                                    <td><a id="update" href="/Duyuru/Edit/@item.Id"><span class="badge badge-soft-success">Güncelle</span></a></td>


                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5"><span class="badge badge-border badge-gradient-danger">Kayıt bulunamadı</span></td>
                            </tr>
                        }


                    </tbody>

                </table>
            </div>
        </div>
    </div>
</div>

