@using Kutuphane.WebUI.Models.Entity;
@model TblDuyuru

@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">


    <div class="col-lg-12">


        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Güncelleme Sayfası</h5>
            </div>

            <div class="card-body">
                <form class="row g-3" method="post">
                    <div class="col-md-4">
                        <label for="validationDefault01" class="form-label">Kategori Adı</label>
                        <input type="text" class="form-control" name="Kategori" id="validationDefault01" value="@Model.Kategori" required>
                    </div>

                    <div class="col-md-4">
                        <label for="validationDefault02" class="form-label">İçerik</label>
                        <textarea class="form-control" name="Icerik" id="validationDefault02" value="">@Html.Raw(Model.Icerik)</textarea>
                    </div>


                    <div class="col-12">
                        <button class="btn btn-primary" type="submit">Kaydet</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


