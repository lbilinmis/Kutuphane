@using Kutuphane.WebUI.Models.Entity;
@model List<TblHareket>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">


    <div class="col-lg-12">


        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Ödünç Kitap Listesi</h5>
            </div>
            <div class="card-body">
                @*<a href="/Kitap/Add" class="btn btn-primary">Yeni Kitap</a>*@
            </div>
            @*@using (Html.BeginForm("Index", "Kitap", FormMethod.Get))
                {
                    <div class="card-body">
                        <input type="text" name="keyword" id="keyword" class="form-control" placeholder="Kitap ara ..." />
                    </div>
                }*@

            <div class="card-body">
                <table id="scroll-vertical" class="table table-bordered dt-responsive nowrap align-middle mdl-data-table" style="width:100%">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Kitap Adı</th>
                            <th>Üye Adı Soyadı</th>
                            <th>Personel</th>
                            <th>Alış Tarihi</th>
                            <th>Teslim Tarihi</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Count > 0)
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Id</td>
                                    <td>@item.TblKitap.Ad</td>
                                    <td>@(item.TblUye.Ad + " " + item.TblUye.Soyad)</td>
                                    <td>@(item.TblPersonel.AdSoyad)</td>
                                    <td>@(Convert.ToDateTime(item.AlisTarihi).ToShortDateString())</td>

                                    <td>@(Convert.ToDateTime(item.TeslimTarihi).ToShortDateString())</td>
                                   

                                    <td><a id="delete" href="/Islem/Detail/@item.Id"><span class="badge badge-soft-danger">Detay</span></a></td>


                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="9"><span class="badge badge-border badge-gradient-danger">Kayıt bulunamadı</span></td>
                            </tr>
                        }


                    </tbody>

                </table>
            </div>
        </div>
    </div>
</div>

