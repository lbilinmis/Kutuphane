@using Kutuphane.WebUI.Models.Entity;
@model List<TblHareket>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">


    <div class="col-lg-12">


        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Ödünç Kitap Listesi</h5>
            </div>
            <div class="card-body">
             
            <div class="card-body">
                <table id="scroll-vertical" class="table table-bordered dt-responsive nowrap align-middle mdl-data-table" style="width:100%">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Kitap Adı</th>
                            <th>Üye Adı Soyadı</th>
                            <th>Alış Tarihi</th>
                            <th>Iade Tarihi</th>
                           
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Count > 0)
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Id</td>
                                    <td>@item.TblKitap.Ad</td>
                                    <td>@(item.TblUye.Ad + " " + item.TblUye.Soyad)</td>
                                    <td>@(Convert.ToDateTime(item.AlisTarihi).ToString("dd/MM/yyyy"))</td>

                                    <td>@(Convert.ToDateTime(item.TeslimTarihi).ToString("dd/MM/yyyy"))</td>

                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="9"><span class="badge badge-border badge-gradient-danger">Kayıt bulunamadı</span></td>
                            </tr>
                        }


                    </tbody>

                </table>
            </div>
        </div>
    </div>
</div>

