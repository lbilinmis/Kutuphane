                    </div>

                    <div class="col-md-4">
                        <label for="Okul" class="form-label">Okul</label>
                        @*<input type="text" class="form-control" name="AdSoyad" id="validationDefault01" value="" required>*@
                        @Html.TextBoxFor(x => x.Okul, new { @class = "form-control", @id = "Okul" })
                        @Html.ValidationMessageFor(x => x.Okul, "", new { @style = "color:red" })
                    </div>


                    <div class="col-12">
                        <button class="btn btn-primary" type="submit">Kaydet</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


