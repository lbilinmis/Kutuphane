                        @*<input type="text" class="form-control" name="AdSoyad" id="validationDefault01" value="" required>*@
                        @Html.TextBoxFor(x => x.EMail, new { @class = "form-control", @id = "EMail" })
                        @Html.ValidationMessageFor(x => x.EMail, "", new { @style = "color:red" })
                    </div>

                    <div class="col-md-4">
                        <label for="validationDefault01" class="form-label">Kullanıcı Adı</label>
                        @*<input type="text" class="form-control" name="AdSoyad" id="validationDefault01" value="" required>*@
                        @Html.TextBoxFor(x => x.KullaniciAdi, new { @class = "form-control", @id = "KullaniciAdi" })
                        @Html.ValidationMessageFor(x => x.KullaniciAdi, "", new { @style = "color:red" })
                    </div>

                    <div class="col-md-4">
                        <label for="Sifre" class="form-label">Sifre</label>
                        @*<input type="text" class="form-control" name="AdSoyad" id="validationDefault01" value="" required>*@
                        @Html.TextBoxFor(x => x.Sifre, new { @class = "form-control", @id = "Sifre" })
                        @Html.ValidationMessageFor(x => x.Sifre, "", new { @style = "color:red" })
                    </div>

                    <div class="col-md-4">
