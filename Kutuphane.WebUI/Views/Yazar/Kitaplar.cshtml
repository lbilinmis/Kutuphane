@using Kutuphane.WebUI.Models.Entity;
@model List<TblKitap>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">


    <div class="col-lg-12">


        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Kitap Listesi</h5>
            </div>
          
            <div class="card-body">
                <table id="scroll-vertical" class="table table-bordered dt-responsive nowrap align-middle mdl-data-table" style="width:100%">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Kitap Adı</th>
                            <th>Yazarı</th>
                            <th>Kategorisi</th>
                            <th>Basım Yılı</th>
                            <th>Yayınevi</th>
                            <th>Durum</th>
                            <th>Sil</th>
                            <th>Düzenle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Count > 0)
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Id</td>
                                    <td>@item.Ad</td>
                                    <td>@(item.TblYazar.Ad + " " + item.TblYazar.Soyad)</td>
                                    <td>@(item.TblCategory.Ad)</td>
                                    <td>@(item.BasimYili)</td>
                                    <td>@(item.YayinEvi)</td>
                                    <td>@item.Durum</td>

                                    <td><a id="delete" href="/Kitap/Delete/@item.Id"><span class="badge badge-soft-danger">Sil</span></a></td>


                                    <td><a href="/Kitap/Edit/@item.Id"><span class="badge badge-soft-info">Düzenle</span></a></td>

                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="9"><span class="badge badge-border badge-gradient-danger">Kayıt bulunamadı</span></td>
                            </tr>
                        }


                    </tbody>

                </table>
            </div>
        </div>
    </div>
</div>

